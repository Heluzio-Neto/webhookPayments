{
  "compilerOptions": {
    "outDir": "./dist",       
    "rootDir": "./src",       
    "target": "ES6",                                
    /* Modules */
    "module": "commonjs",     
    "allowJs": true,
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,            
    "strict": false,                                   
    "skipLibCheck": true                                
  },
    "include": [
      "src/**/*.ts"
    ],
  "exclude": [
    "node_modules"        
  ]    
}
